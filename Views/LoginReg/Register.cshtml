                <li><a href="anime.html">动漫</a></li>
                <li><a href="documentary.html">纪录片</a></li>
            </ul>
        </div>

    </div>
    <main class="container">
        <!-- 登录模块 -->
        <div class="login">
            <h2>用户注册</h2>
            <!--onsubmit为False时，阻止提交（Prompt1）-->
            <form method="post" id="myForm2" onsubmit="return checkFormReg()" action="/LoginReg/Register">
                <div class="form-group">
                    <label for="usn2"><input type="text" maxlength="16" id="usn2" name="username" placeholder="请输入账号"></label>
                    <!--错误提示-->
                    <div class="prompt" id="noticeUser2"></div>
                    <!--第一次密码输入-->
                    <label for="pwd2" style="margin-bottom:-10px">
                        <input type="password" maxlength="16" id="pwd2" name="password" placeholder="请输入密码">
                        <img src="../Content/img/eye2.png" class="eye-icon" id="eyeIconPwd2" onclick="togglePassword('pwd2','eyeIconPwd2')">
                    </label>
                    <div class="prompt" id="noticePwd2"></div>
                    <!--第二次密码输入-->
                    <label for="cofPwd">
                        <input type="password" maxlength="16" id="cofPwd" name="confirmPassword" placeholder="再次输入密码">
                        <img src="../Content/img/eye2.png" class="eye-icon" id="eyeIconCofPwd2" onclick="togglePassword('cofPwd','eyeIconCofPwd2')">
                    </label>
                    <div class="prompt" id="noticeCofPwd"></div>
                </div>
                <!--注册按钮-->
                <button type="submit" class="login-reg-button">注册</button>
            </form>
            <div class="login-reg">
                <a href="/LoginReg/Login">已有账号?去登录</a>
            </div>
        </div>
    </main>
    <!--JS脚本-->
    <!--js脚本引用-->
    <script src="~/Content/js/jquery-3.4.1.min.js"></script>
    <!--包含‘本地检查表单’、‘清除提示信息’、‘密码可见与不可见’-->
    <script src="~/Content/js/loginreg.js"></script>
    <!--页脚-->
    <footer id="footer">
        <div class="footer-info">
